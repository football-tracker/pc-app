{
  "name": "football-tracker",
  "version": "0.0.1",
  "description": "An application that allows you to trace the history of football matches, up to 20 days.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "icon": "./src/assets/img/ballon-de-football.ico",
    "appId": "io.github.football-tracker",
    "productName": "Football Tracker",
    "nsis": {
      "artifactName": "Football Tracker Setup ${version}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./src/assets/img/ballon-de-football.ico",
      "uninstallerIcon": "./src/assets/img/ballon-de-football.ico",
      "deleteAppDataOnUninstall": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/football-tracker/pc-app.git"
  },
  "author": "Fofh, Tao, Code Lord",
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/football-tracker/pc-app/issues"
  },
  "homepage": "https://github.com/football-tracker/pc-app#readme",
  "keywords": [
    "app"
  ],
  "devDependencies": {
    "electron": "^21.2.1",
    "electron-builder": "^23.6.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0"
  }
}
